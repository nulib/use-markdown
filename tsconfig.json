{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node", // ✅ Key fix for Node/Vite
    "jsx": "react-jsx", // ✅ Required for modern JSX
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true, // ✅ Enables .d.ts generation
    "declarationDir": "dist",
    "outDir": "dist",
    "types": ["node", "vitest/globals"],
    "strict": true
  },
  "include": ["src"],
  "exclude": ["dist"]
}
